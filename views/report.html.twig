{% extends "layout.html.twig" %}

{% block main %}
    {% if game.played %}
        <h1>Résultats du jeu : {{ total }} clics</h1>
        <ul>
            {% for url in game.urls %}
                <li>
                    L'URL {{ url.href }} a été cliquée {{ url.counter }} fois.
                </li>
            {% endfor %}
        </ul>
    {% else %}
        <p>
            Il semblerait que personne n'ait encore joué à votre jeu. Faites tourner le lien !
            Reviens ensuite sur cette page pour voir les résultats.
        </p>
    {% endif %}
        <div id="links">
        <p>Lien du jeu : <a href="/game/{{ game.id }}">{{ url('game', {id: game.id}) }}</a></p>
        <p>Vous pouvez aussi <a href="/new">générer un nouveau jeu</a></p>
        </div>
{% endblock %}